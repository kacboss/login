<!doctype html>
<html lang="{{ site.language }}">
<head>


  <meta charset="UTF-8">
  <title>{{ wp_title ? wp_title : site.name }}</title>

  <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1. maximum-scale=5, minimum-scale=1">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <link rel="icon" href="{{ theme.link }}/favicon/favicon.ico" sizes="16x16" />

  {{ options.additionals.head }}
  {{ function('wp_head') }}

  <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>  

<script src="https://cdn.jsdelivr.net/npm/inview@0.0.15/inview.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>



{#<script src="https://cdn.rawgit.com/fdaciuk/ajax/v3.0.4/dist/ajax.min.js"></script>#}






</head>

<body>

{{ options.additionals.body }}

<header class="header">
  <div class="row">
    <div class="column">
      <a class="header__logo" href="{{ site.link }}">
        {% include 'svg/Logintrade.svg' %}
      </a>


      {% if main_menu.items %}
        <ul class="header__menu">
            {% for item in main_menu.items %}
                <li class="header__menu__item {{ item.current ? 'active' }}">
                  <a href="{{ item.link }}">{{item.title }}</a>
                </li>
            {% endfor %}
        </ul>
     {% endif %}


      <div class="header__menu--right">
        <a href="" class="sign-in">{% include 'svg/person.svg' %} Sign in</a>
        <a href="" class="btn book-btn">Book a demo {% include 'svg/arrow-right.svg' %}</a>
      </div>


      <button id="opener" class="header__btn open-menu">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </button>

      <div class="mobile-menu">

        {% if main_menu.items %}
          <ul class="header__menu">
              {% for item in main_menu.items %}
                  <li class="header__menu__item {{ item.current ? 'active' }}">
                    <a href="{{ item.link }}">{{item.title }}</a>
                  </li>
              {% endfor %}
          </ul>
        {% endif %}

  
        <div class="header__menu--right">
          <a href="" class="sign-in">{% include 'svg/person.svg' %} Sign in</a>
          <a href="" class="btn book-btn">Book a demo {% include 'svg/arrow-right.svg' %}</a>
        </div>

      </div>

    </div>
  </div>
</header>
